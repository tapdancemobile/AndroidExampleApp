<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/morebar">
       
<RelativeLayout 
        android:id="@+id/shareheader"
        android:background="@color/lightgrey"
		android:layout_width="fill_parent" 
		android:layout_height="50dip"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="15dip"
		android:padding="10dip"
		android:gravity="center_horizontal">	
		
		<ImageView 
		android:id="@+id/shareimage"
		android:src="@drawable/toys"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true">
		</ImageView>
		
		<TextView 
		android:layout_toRightOf="@id/shareimage"
		android:textSize="18sp" 
		android:textColor="@color/white"
		android:text="Share Options..."  
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:layout_centerVertical="true"
		android:paddingLeft="5dp">
		</TextView>
                  
</RelativeLayout>
    
<Button 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@id/shareheader"
		android:id="@+id/emailbutton"
		android:textColor="@color/black"
		android:textStyle="bold"
		android:textSize="18sp"
		android:padding="10dp"
		android:text="Email">	
</Button>
	
<Button 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@id/emailbutton"
		android:id="@+id/facebookbutton"
		android:textColor="@color/black"
		android:textStyle="bold"
		android:textSize="18sp"
		android:padding="10dp"
		android:text="Facebook">	
</Button>
	
	
<Button 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@id/facebookbutton"
		android:id="@+id/twitterbutton"
		android:textColor="@color/black"
		android:textStyle="bold"
		android:textSize="18sp"
		android:padding="10dp"
		android:text="Twitter">	
</Button>

<Button 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@id/twitterbutton"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dip"
		android:id="@+id/cancelbutton"
		android:textColor="@color/black"
		android:textStyle="bold"
		android:textSize="18sp"
		android:padding="10dp"
		android:text="Cancel">	
</Button>
		
</RelativeLayout>